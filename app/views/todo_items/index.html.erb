<h1><%= @todo_list.title %></h1>

<h2>Listing todo_items</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody class="todo_items">
    <% @todo_items.each do |todo_item| %>
      <tr id="<%= dom_id(todo_item) %>" class="todo_item">
        <td><%= todo_item.id %></td>
        <td><%= todo_item.content %></td>
        <td><%= link_to 'Edit', edit_todo_list_todo_item_path(@todo_list.id, todo_item.id) %></td>
        <td><%= link_to 'Destroy', [@todo_list, todo_item], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo item', new_todo_list_todo_item_path %>
<%= link_to 'Back', todo_lists_path %>
